<?xml version="1.0" encoding="utf-8"?>
<nrml xmlns="http://openquake.org/xmlns/nrml/0.5"
    xmlns:gml="http://www.opengis.net/gml"
>
    <sourceModel name="Model 1">

        <sourceGroup
            name="MUTEX ruptures"
            rup_interdep="mutex"
            src_interdep="indep"
            tectonicRegion="TRTA">

            <simpleFaultSource id="s1" name="I Source">
                <simpleFaultGeometry>
                    <gml:LineString>
                        <gml:posList>
                            -0.6 0.1 -0.3 0.1
                        </gml:posList>
                    </gml:LineString>
                    <dip> 90.0 </dip>
                    <upperSeismoDepth>0.0</upperSeismoDepth>
                    <lowerSeismoDepth>15.0</lowerSeismoDepth>
                </simpleFaultGeometry>
                <magScaleRel> WC1994 </magScaleRel>
                <ruptAspectRatio> 2.0 </ruptAspectRatio>
                <incrementalMFD minMag="6.55" binWidth="0.1">                   
                    <occurRates>0.002 0.001</occurRates>
                </incrementalMFD>
                <rake>90.0</rake>
            </simpleFaultSource>
        </sourceGroup>

        <sourceGroup
            name="MUTEX sources"
            rup_interdep="indep"
            src_interdep="mutex"
            srcs_weights="0.1 0.3 0.6"
            tectonicRegion="TRTA">

            <simpleFaultSource id="s1" name="I Source">
                <simpleFaultGeometry>
                    <gml:LineString>
                        <gml:posList>
                            -0.6 0.0 -0.3 0.0 
                        </gml:posList>
                    </gml:LineString>
                    <dip> 90.0 </dip>
                    <upperSeismoDepth>0.0</upperSeismoDepth>
                    <lowerSeismoDepth>15.0</lowerSeismoDepth>
                </simpleFaultGeometry>
                <magScaleRel> WC1994 </magScaleRel>
                <ruptAspectRatio> 2.0 </ruptAspectRatio>
                <incrementalMFD minMag="6.55" binWidth="0.1">                   
                    <occurRates>0.002</occurRates>
                </incrementalMFD>
                <rake>90.0</rake>
            </simpleFaultSource>

            <simpleFaultSource id="s2" name="II Source">
                <simpleFaultGeometry>
                    <gml:LineString>
                        <gml:posList>
                            -0.3 0.0 0.0 0.0
                        </gml:posList>
                    </gml:LineString>
                    <dip> 90.0 </dip>
                    <upperSeismoDepth>0.0</upperSeismoDepth>
                    <lowerSeismoDepth>15.0</lowerSeismoDepth>
                </simpleFaultGeometry>
                <magScaleRel> WC1994 </magScaleRel>
                <ruptAspectRatio> 2.0 </ruptAspectRatio>
                <incrementalMFD minMag="6.65" binWidth="0.1">                   
                    <occurRates>0.0015</occurRates>
                </incrementalMFD>
                <rake>90.0</rake>
            </simpleFaultSource>

            <simpleFaultSource id="s3" name="III Source">
                <simpleFaultGeometry>
                    <gml:LineString>
                        <gml:posList>
                            0.0 0.0 0.3 0.0
                        </gml:posList>
                    </gml:LineString>
                    <dip> 90.0 </dip>
                    <upperSeismoDepth>0.0</upperSeismoDepth>
                    <lowerSeismoDepth>15.0</lowerSeismoDepth>
                </simpleFaultGeometry>
                <magScaleRel> WC1994 </magScaleRel>
                <ruptAspectRatio> 2.0 </ruptAspectRatio>
                <incrementalMFD minMag="6.75" binWidth="0.1">                   
                    <occurRates>0.001</occurRates>
                </incrementalMFD>
                <rake>90.0</rake>
            </simpleFaultSource>            

        </sourceGroup>

        <sourceGroup
            name="Independent sources"
            tectonicRegion="TRTA"
            rup_interdep="indep"
            src_interdep="indep">

            <simpleFaultSource id="s4" name="IV Source" tectonicRegion="TRTA">
                <simpleFaultGeometry>
                    <gml:LineString>
                        <gml:posList>
                            -0.3 0.0 -0.3 0.3
                        </gml:posList>
                    </gml:LineString>
                    <dip> 90.0 </dip>
                    <upperSeismoDepth>0.0</upperSeismoDepth>
                    <lowerSeismoDepth>15.0</lowerSeismoDepth>
                </simpleFaultGeometry>
                <magScaleRel> WC1994 </magScaleRel>
                <ruptAspectRatio> 2.0 </ruptAspectRatio>
                <incrementalMFD minMag="6.65" binWidth="0.1">                   
                    <occurRates>0.0015</occurRates>
                </incrementalMFD>
                <rake>90.0</rake>
            </simpleFaultSource>


        </sourceGroup>

    </sourceModel>
</nrml>
